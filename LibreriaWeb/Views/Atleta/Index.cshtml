<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AtletaNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AtletaApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisciplinaAtletas)
            </th>
        
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AtletaNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AtletaApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePais)
                </td>
                <td>
                    @foreach (var disciplina in item.DisciplinaAtletas)
                    {
                        <div>
                            @Html.DisplayFor(modelDisciplina => disciplina)

                        </div>
                    }

                </td>
                      
