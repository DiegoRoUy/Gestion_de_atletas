@model IEnumerable<LibreriaWeb.Models.Atletas.AtletaListadoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Atletas</h1>

<p>
    <a asp-action="ListaAteltasXDisciplina" style="text-decoration: none">Buscar Atleta por Id de Disciplina</a>
</p>
