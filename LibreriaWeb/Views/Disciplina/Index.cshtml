@model IEnumerable<LibreriaWeb.Models.Disciplinas.DisciplinaListadoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Disciplinas</h1>
@if (ViewBag.Exito != null)
{
    <div class="alert alert-success">@ViewBag.Exito</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<p>
    <a asp-action="Create" style="text-decoration: none">Alta Disciplina</a>
</p>
<p>
    <a asp-action="BuscarDisciplniaPorID" style="text-decoration: none">Buscar Disciplina por ID</a>
</p>
<p>
    <a asp-action="BuscarDisciplinaPorNombre" style="text-decoration: none">Buscar Disciplina por Nombre </a>
</p>
@* <div>
    <a asp-action="Index" style="text-decoration: none">Volver al inicio</a>
</div> *@
@* <div>
    <a asp-action="Index">Volver</a>
</div> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @*  @Html.ActionLink("Details", "Details", new { id=item.Id }) | *@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
