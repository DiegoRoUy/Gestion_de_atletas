    @model LibreriaWeb.Models.Disciplinas.DisciplinaIDViewModel

@{
    ViewData["Title"] = "BuscarDisciplniaPorID";
}



<h1>Buscar disciplnia por ID</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarDisciplniaPorID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdDisciplina" class="control-label"></label>
                <input asp-for="IdDisciplina" class="form-control" />
                <span asp-validation-for="IdDisciplina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-warning">
        @ViewBag.Mensaje
    </div>
}
<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
