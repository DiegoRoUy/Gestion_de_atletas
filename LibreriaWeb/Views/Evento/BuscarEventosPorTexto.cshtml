@model LibreriaWeb.Models.Eventos.EventoPorTextoViewModel

@{
    ViewData["Title"] = "BuscarEventosPorTexto";
}

<h1>Buscar eventos por texto</h1>

@* <h4>EventoPorTextoViewModel</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarEventosPorTexto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePrueba" class="control-label"></label>
                <input asp-for="NombrePrueba" class="form-control" />
                <span asp-validation-for="NombrePrueba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-warning">
        @ViewBag.Mensaje
    </div>
}
@* <div>
    <a asp-action="Index">Volver al inicio</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
