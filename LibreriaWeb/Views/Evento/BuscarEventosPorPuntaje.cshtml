@model LibreriaWeb.Models.Eventos.EventoPorPuntajeViewModel

@{
    ViewData["Title"] = "BuscarEventosPorPuntaje";
}

<h1>Buscar eventos por puntaje</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarEventosPorPuntaje">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Puntaje1" class="control-label"></label>
                <input asp-for="Puntaje1" class="form-control" />
                <span asp-validation-for="Puntaje1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puntaje2" class="control-label"></label>
                <input asp-for="Puntaje2" class="form-control" />
                <span asp-validation-for="Puntaje2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-warning">
        @ViewBag.Mensaje
    </div>
}
